<head>
    <title>EVENTS</title>
</head>
  <h1>Welcome to EVENT HANDLER!</h1>

<head>
    <title>CRUD</title>
</head>
<form method='post' action='/events/create'>
  Event: <Input type='title' name='title'><br>
  Date:  <Input type='date' name='date'><br>
  Name:  <Input type='text' name='organizer_name'><br>
  Email: <Input type='email' name='organizer_email'><br>
  <button>Add Event</button>
  <br>
</form>
<br>

<form method='post' action='/events/show'>
  <button>See All events</button>


  <ul>
  <% @events.each do |event| %>
  <li><a href="/event/<%= event.id %>"><%= event.id %></a><li><%= event.title %></a>
  </li>
  <li><%= event.organizer_name%></a>
  </li>
  <li><%= event.date %></a>
  </li>
  <li><%= event.organizer_email %></a>
  </li>
  <br>

  <% end %>
</form>



